<div class="min-h-screen flex flex-col items-center">
  <div class="mt-32 bg-slate-100 px-8 py-6 rounded border border-slate-200 flex flex-col justify-center items-center shadow-xl">
    <div class="py-3 text-3xl text-gray-700 font-light">Log in</div>
    <div>
      <%= form_for(:session, url: login_path, method: :post, html: {class: "flex flex-col justify-center"}) do |f| %>
        <%= f.label :username, class: "text-lg text-gray-700" %>
        <%= f.text_field :username, class: "px-2 py-1 rounded border border-gray-400 outline-none focus:border focus:border-blue-500" %>

        <%= f.label :password, class: "pt-3 text-lg text-gray-700" %>
        <%= f.password_field :password, class: "px-2 py-1 rounded border border-gray-400 outline-none focus:border focus:border-blue-500" %>
        <br>
        <%= f.submit "Log in", class: "w-full px-4 py-2 bg-blue-600 text-gray-50 text-lg rounded hover:bg-blue-800 flex justify-center items-center ease-in-out duration-300" %>
      <% end %>
    </div>
  </div>
</div>